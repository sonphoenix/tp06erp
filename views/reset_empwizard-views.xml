<odoo>
    <record id="view_resetwizard_form" model="ir.ui.view">
        <field name="name">library.resetwizard.form</field>
        <field name="model">library.resetwizard</field>
        <field name="arch" type="xml">
            <form string="Reset borrower">
                <group>
                    <field name="borrower_id" />
                </group>

                <footer>
                    <button string="Reset" type="object" name="reset_borrowings"
                        class="btn-primary"
                    />


                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>