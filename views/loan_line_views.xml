<odoo>
    <record id="view_loan_line_tree" model="ir.ui.view">
        <field name="name">library.loan.line.tree</field>
        <field name="model">library.loan.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="loan_id" />
                <field name="book_id" />
                <field name="isbn" />
                <field name="language" />
                <field name="page_count" />
            </tree>
        </field>
    </record>

    <record id="view_loan_line_form" model="ir.ui.view">
        <field name="name">library.loan.line.form</field>
        <field name="model">library.loan.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="loan_id" />
                    <field name="book_id" />
                    <field name="isbn" />
                    <field name="language" />
                    <field name="page_count" />
                </group>
            </form>
        </field>
    </record>
</odoo>