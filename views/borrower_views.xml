<odoo>
    <record id="view_borrower_tree" model="ir.ui.view">
        <field name="name">library.borrower.tree</field>
        <field name="model">library.borrower</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="first_name" />
                <field name="birth_date" />
                <field name="state" />
                <field name="gender" />
                <field name="loan_count" />
            </tree>
        </field>
    </record>

    <record id="view_borrower_form" model="ir.ui.view">
        <field name="name">library.borrower.form</field>
        <field name="model">library.borrower</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="first_name" />
                    <field name="birth_date" />
                    <field name="state" />
                    <field name="gender" />
                    <field name="loan_ids" />
                </group>
            </form>
        </field>
    </record>
</odoo>